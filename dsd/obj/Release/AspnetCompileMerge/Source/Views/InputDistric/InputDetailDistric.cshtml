@model FormModel
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="@Locate.Url("/home.html")"><i class="fa fa-home"></i>@Locate.T("Tổng quan")</a>
        </li>
        <li>
            <a href="@Locate.Url("/input-distric.html")"><i class="fa fa-folder"></i> @Locate.T("Phiếu nhập")</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption">@ViewBag.Title</span>
                </div>

                <div class="widget-body no-padding widget_form_table">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter">
                            <div class="row">
                                <div class="col-md-3 padding-left-10 padding-right-0">
                                    <label>
                                        @Html.DropDownList("IDProvice", Model.Provinces.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString() }).ToList(), new { @class = "form-control input-sm select_change", @data_url = Locate.Url("/input-distric/DistricPicker.html"), @data_target = "#input-distric" })
                                    </label>
                                </div>
                                <div class="col-md-3 padding-left-10 padding-right-0">
                                    <label id="input-distric">
                                        @Html.DropDownList("IDDistric", Model.Districs.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString() }).ToList(), new { @class = "form-control input-sm select_change_inputarea", @data_url = Locate.Url("/input-distric/InputDataPicker.html"), @data_target = "#input-data" })
                                    </label>
                                </div>
                                <input type="hidden" value="@Model.IDInputGrantReport" id="IDInputGrantReport" />
                                <input type="hidden" value="@Model.IDInputUnitReport" id="IDInputUnitReport" />
                                <input type="hidden" value="@Model.IDInputArea" id="IDInputArea" />
                                <input type="hidden" value="@Model.IDCoupon" id="IDCoupon" />
                                <input type="hidden" value="@Model.IDForm" id="IDForm" />
                            </div>
                        </div>
                        <div class="DTTT btn-group">
                            <div class="attachFile_section">
                                <button type="button" class="btn btn-info attachFile" data-id="@Model.IDInput" data-rel="#AttachFiles" data-file-url="@Locate.Url("/input-province/change-path.html")" data-target="#CrProjectFormFile"
                                        data-file-name="FileName" data-file-path="Path">
                                    <i class="glyphicon glyphicon-upload "></i> @Locate.T("Tải file")
                                </button>

                            </div>
                        </div>
                        <div>
                            <div class="inputdetailResizable divContainer" id="input-data">
                                @Html.Partial("InputDataPicker", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
