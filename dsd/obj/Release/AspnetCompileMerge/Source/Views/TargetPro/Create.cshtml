@model TargetProModel
<form id="FrmCrTargetPro" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      title="@ViewBag.Title" action="@Model.Url" class="form-horizontal bv-form validateForm quickSubmit successOnRefresh" method="post" novalidate="novalidate">
    <div class="container-fluid">
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Mã thuộc tính")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtCode", "Code", @Model.TargetPro.Code, Locate.T("Mã thuộc tính"), Locate.T("Mã thuộc tính"), true, null, 25)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Tên thuộc tính")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtName", "Name", @Model.TargetPro.Name, Locate.T("Tên thuộc tính"), Locate.T("Tên thuộc tính"), true, null, 250)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Nhóm chỉ tiêu")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.DropDownList("IDTargetType", Model.TargetTypeList.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.IDTargetType) }).ToList(), Locate.T("--- Chọn nhóm chỉ tiêu ---"), new { @class = "form-control input-sm select_change", @data_url = Locate.Url("/targetpro/TargetPicker.html"), @data_target = "#target-child-cr" })
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Chỉ tiêu")<span class="red">*</span></label>
            <div class="col-lg-8" id="target-child-cr">
                 @Html.DropDownList("IDTarget", Model.TargetList.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.TargetPro.IDTarget) }).ToList(), Locate.T("--- Chọn chỉ tiêu ---"), new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Cấp cha")</label>
            <div class="col-lg-8">
                @Html.DropDownList("Parent", Model.TargetProParents.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.TargetPro.Parent) }).ToList(), Locate.T("--- Chọn nội dung cha ---"), new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-4">
                <p id="messeage_err" class="red"></p>
                <input type="hidden" value="@Model.TargetPro.ID" name="ID" />
                <input type="hidden" value="@Model.TargetPro.Status" name="Status" />
                <button type="submit" class="btn btn-info">@Locate.T("Xong")</button>
            </div>
        </div>
    </div>
</form>