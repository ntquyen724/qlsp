@model NationModel
<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption"><i class="fa fa-list" aria-hidden="true"></i>@ViewBag.Title</span>
                    <div class="widget-buttons">
                        <a data-toggle="maximize" href="#"><i class="fa fa-expand"></i></a>
                    </div>
                </div>
                <div class="widget-body no-padding widget_form_table">
                    <div class="dataTables_wrapper form-inline">
                        <div id="divNation" class="divContainer">
                            <div class="row padding-20">
                                @if (Model.Nations.IsNotEmpty())
                                {
                                    foreach (var item in Model.Nations)
                                    {
                                        var alias = Utils.StringAlias(item.Name, item.ID);
                                        var detailLink = Locate.Url("/nation/view-detail/{0}.html", alias);
                                        var redirectLink = !string.IsNullOrEmpty(item.LinkAddress) ? item.LinkAddress : "#";
                                        <div class="col-md-2">
                                            <div class="thumbnail timeline-body-img" style="width: 100%">
                                                <div class="caption center padding-5">
                                                    @* <a data-id="@item.ID" title="@Locate.T("Xem chi tiết {0}", item.Name)" href="@redirectLink" @(redirectLink == "#" ? "" : "target=\"_blank\"")>*@
                                                    <a class="quickUpdate" data-id="@item.ID" title="@Locate.T("Sửa")" href="@detailLink">
                                                        @item.Name.ToUpper()
                                                    </a>
                                                </div>
                                                <img src="@GlobalConfig.StgSrcPath(item.ImagePath)" alt="@item.Name" style="width: 100%; height: 200px;">
                                            </div>
                                        </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
