@model NationModel
<form id="FrmCrNation" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphcol-lg-8 control-label text-align-left text-align-leficon-ok"
      title="@ViewBag.Title" action="@Model.Url" class="form-horizontal bv-form " method="post" novalidate="novalidate">
    <div class="container-fluid">
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Tên tự gọi: ") </label>
            <label class="col-lg-3 control-label text-align-left ">
                @Model.Nation.Name
            </label>
            <label class="col-lg-2 control-label">@Locate.T("Tên gọi khác: ")</label>
            <label class="col-lg-3 control-label text-align-left">
                @Model.Nation.OtherName
            </label>
        </div>

        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Ảnh: ")</label>
            <div class="col-lg-8 control-label text-align-left">
                <span id="divfile">
                    @if (!string.IsNullOrEmpty(Model.Nation.ImagePath))
                    {
                        <span class="fileitem member">
                            <img class="img-thumbnail" src="@GlobalConfig.StgSrcPath(Model.Nation.ImagePath)" title=@Model.Nation.Name><br>
                        </span>
                    }
                </span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Nhóm địa phương: ") </label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.LocalGroup
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Dân số: ") </label>
            <label class="col-lg-3 control-label text-align-left">
                @Model.Nation.Population
            </label>
            <label class="col-lg-2 control-label">@Locate.T("Ngôn ngữ: ") </label>
            <label class="col-lg-3 control-label text-align-left">
                @Model.Nation.Language
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Lịch sử: ") </label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.History
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Hoạt động sản xuất: ") </label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Activities
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Ở: ") </label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Habitat
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Phương tiện vận chuyển: ")</label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Transportation
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Quan hệ xã hội: ")</label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Relationship
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Cưới xin: ")</label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Wedding
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Học: ")</label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Learning
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Văn nghệ: ") </label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Art
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Chơi: ") </label>
            <label class="col-lg-8 control-label text-align-left">
                @Model.Nation.Entertainment
            </label>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Link liên kết: ")</label>

            <a href="@Model.Nation.LinkAddress" target="_blank" class="col-lg-8 control-label text-align-left">
                    @Model.Nation.LinkAddress
            </a>
        </div>
    </div>
</form>
