@model InputModel
<table id="TblTeams" class="table table-bordered table-hover table-striped dataTable" role="grid" aria-describedby="searchable_info">
    <thead>
        <tr role="row">
            <th class="wpx50 center" tabindex="0">@Locate.T("STT")</th>
            <th class="wpx120 " tabindex="0" aria-controls="searchable">@Locate.T("Mã phiếu")</th>
            <th class="wauto " tabindex="0" aria-controls="searchable">@Locate.T("Tên tên phiếu")</th>
            <th class="wauto " tabindex="0" aria-controls="searchable">@Locate.T("Đơn vị báo cáo")</th>
            <th class="wauto " tabindex="0" aria-controls="searchable">@Locate.T("Tỉnh/thành phố")</th>
            <th class="wpx120 " tabindex="0" aria-controls="searchable">@Locate.T("Biểu mẫu")</th>
        </tr>
    </thead>
    <tbody>
        @if (Utils.IsNotEmpty<Coupon>(Model.Coupons))
        {
            var stt = ViewBag.Pagination.RowStart;
            foreach (var item in Model.Coupons)
            {
                stt++;
                var alias = Utils.StringAlias(item.Name, item.ID);
                var viewLink = Locate.Url("/input/{0}.html", alias);
                var updateLink = Locate.Url("/input/update/{0}.html", alias);
                var insertLink = Locate.Url("/input/create/{0}.html", alias);
                var deleteLink = Locate.Url("/input/is-delete/{0}.html", alias);
                var detailLink = Locate.Url("/input/detail/{0}.html", alias);
                <tr role="row">
                    <td class="center ">@stt</td>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td></td>
                    <td></td>
                    <td>
                        <form action="/input/detail.html?IDInputGrantReport=@Model.IDInputGrantReport&IDInputUnitReport=@Model.IDInputUnitReport&IDInputArea=@Model.IDInputArea&IDCoupon=@item.ID" method="post" enctype="multipart/form-data">
                            <button class="btn btn-info" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                                <span class="hidden-search">@Locate.T("Biểu mẫu")</span>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="row DTTTFooter">
    @if (ViewBag.Pagination.RowCount == 0)
    {
        <div class="col-sm-12 text-center padt10">
            <strong>
                @Locate.T("Không có giá trị nào phù hợp, vui lòng thử lại")
            </strong>
        </div>
    }
    <div class="col-sm-6">
        <div class="dataTables_info" id="searchable_info" role="status" aria-live="polite"></div>
    </div>
    <div class="col-sm-6">@ViewBag.Pagination.SetTarget("#divInput").Render()</div>
</div>