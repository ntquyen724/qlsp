@model InputModel
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="@Locate.Url("/home.html")"><i class="fa fa-home"></i>@Locate.T("Tổng quan")</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption">@ViewBag.Title</span>
                    <div class="widget-buttons">
                        <a data-toggle="maximize" href="#"><i class="fa fa-expand"></i></a>
                    </div>
                </div>
                <div class="widget-body no-padding widget_form_table">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter">
                            <form class="quickSearch" data-target="#divInput" action="@Locate.Url("/input.html")" method="post" enctype="multipart/form-data">
                                <div class="row margin-left-10">
                                    <div class="col-md-3">
                                        <label>
                                            <input type="text" value="@Model.SearchParam.Term" name="Term" class="form-control input-sm padding-left-5" title="@Locate.T("Tìm kiếm theo tên")" placeholder="@Locate.T("Tìm kiếm theo tên")" aria-controls="searchable">
                                        </label>
                                    </div>
                                    <div class="col-lg-3">
                                        <label id="unit-report-child">
                                            @Html.DropDownList("IDInputUnitReport", Model.UnitReports.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString() }).ToList(), Locate.T("--- Chọn đơn vị báo cáo ---"), new { @class = "form-control input-sm" })
                                        </label>
                                    </div>
                                    <div class="col-md-3 data_btn">
                                        <button class="btn btn-info" type="submit">
                                            <i class="glyphicon glyphicon-search"></i>
                                            <span class="hidden-search">@Locate.T("Tìm kiếm")</span>
                                        </button>
                                    </div>
                                </div>
                                <div class="row margin-bottom-20 margin-left-10">
                                    <div class="col-md-3">
                                        @Html.DropDownList("IDInputArea", Model.Provinces.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString() }).ToList(), Locate.T("--- Chọn tỉnh báo cáo ---"), new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div id="divInput" class="divContainer">
                            @Html.Partial("Inputs", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
