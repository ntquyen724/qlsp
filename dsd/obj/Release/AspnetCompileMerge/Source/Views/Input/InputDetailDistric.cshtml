@model FormModel
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="@Locate.Url("/home.html")"><i class="fa fa-home"></i>@Locate.T("Tổng quan")</a>
        </li>
        <li>
            <a href="@Locate.Url("/input-ubdt.html")"><i class="fa fa-folder"></i> @Locate.T("Phiếu nhập")</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption">@ViewBag.Title</span>
                </div>

                <div class="widget-body no-padding widget_form_table">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter">
                            <div class="row">
                                <div class="col-md-3 padding-left-10 padding-right-0">
                                    <label>
                                        @Html.DropDownList("IDProvice", Model.Provinces.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString() }).ToList(), new { @class = "form-control input-sm select_change", @data_url = Locate.Url("/input/DistricPicker.html"), @data_target = "#input-distric" })
                                    </label>
                                </div>
                                <div class="col-md-3 padding-left-10 padding-right-0">
                                    <label id="input-distric">
                                        @Html.DropDownList("IDDistric", Model.Districs.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString() }).ToList(), new { @class = "form-control input-sm select_change_inputarea", @data_url = Locate.Url("/input-ubdt/InputDataPicker.html"), @data_target = "#input-data" })
                                    </label>
                                </div>
                                <input type="hidden" value="@Model.IDInputGrantReport" id="IDInputGrantReport" />
                                <input type="hidden" value="@Model.IDInputUnitReport" id="IDInputUnitReport" />
                                <input type="hidden" value="@Model.IDInputArea" id="IDInputArea" />
                                <input type="hidden" value="@Model.IDCoupon" id="IDCoupon" />
                                <input type="hidden" value="@Model.IDForm" id="IDForm" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="widget-body widget_form_table">
                    <form id="FrmCrForm" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                          title="@ViewBag.Title" action="@Model.Url" class="form-horizontal  bv-form validateForm quickSubmit successOnRefresh" method="post" novalidate="novalidate">
                        <div class="container-fluid">
                            <div class="form-group">
                                <div class="col-md-12" id="input-data">
                                    <table id="TblTeamsDetail" class="table table-bordered tree" role="grid" aria-describedby="searchable_info">
                                        <thead>
                                            <tr role="row">
                                                <th rowspan="2" class="wauto center" tabindex="0" aria-controls="searchable">@Locate.T("Nội dung")</th>
                                                <th class="wpx120 center" tabindex="0" colspan="@Model.TargetPros.Count">
                                                    @ViewBag.TargetName
                                                </th>
                                            </tr>
                                            <tr role="row">
                                                @foreach (var item in Model.TargetPros)
                                                {
                                                    <th class="wpx120 center">
                                                        @item.Name
                                                    </th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var row in Model.ContentTargets)
                                            {
                                                var stringParent = row.Parent > 0 ? string.Format("treegrid-parent-{0}", row.Parent) : string.Empty;
                                                <tr class="treegrid-@row.ID @stringParent">
                                                    <td>@row.Name</td>
                                                    @foreach (var col in Model.TargetPros)
                                                    {
                                                        var item = Model.InputDetails.Find(p => p.IDProperties == col.ID && p.IDType == row.ID) ?? new InputDetail();
                                                        string sName = string.Format("Name-{0}-{1}", row.ID, col.ID);
                                                        <td>
                                                            @Html.CusTextBoxNumberic("id" + sName, sName, item.Value, "")
                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <input type="hidden" value="@Model.IDInput" name="IDInput" />
                                    <input type="hidden" value="@Model.IDForm" name="IDForm" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-8 col-lg-offset-4">

                                    <button type="submit" class="btn btn-info">@Locate.T("Xong")</button>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <label class="col-lg-12 control-label text-align-left"><b>@Locate.T("Hướng dẫn nhập") </b></label>
                            </div>
                            <div class="form-group has-feedback">
                                <div class="col-lg-12">
                                    @Html.CusTextArea("CrtDescribe", "Describe", @Model.Form.Describe, Locate.T("Ghi chú"), Locate.T("Ghi chú"), 10)
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
