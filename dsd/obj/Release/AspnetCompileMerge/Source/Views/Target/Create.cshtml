@model TargetModel
<form id="FrmCrTarget" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      title="@ViewBag.Title" action="@Model.Url" class="form-horizontal bv-form validateForm quickSubmit successOnRefresh" method="post" novalidate="novalidate">
    <div class="container-fluid">
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Mã chỉ tiêu")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtCode", "Code", @Model.Target.Code, Locate.T("Mã chỉ tiêu"), Locate.T("Mã chỉ tiêu"), true, null, 25)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Tên chỉ tiêu")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtName", "Name", @Model.Target.Name, Locate.T("Tên chỉ tiêu"), Locate.T("Tên chỉ tiêu"), true, null, 250)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Nhóm chỉ tiêu")<span class="red">*</span></label>
            <div class="col-lg-8">
                 @Html.DropDownList("IDTargetType", Model.TargetTypes.Select(x => new SelectListItem() { Text = x.Code+" - "+x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.Target.IDTargetType) }).ToList(), new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Đơn vị tính")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.DropDownList("IDUnit", Model.UnitList.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.Target.IDUnit) }).ToList(), new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-4">
                <p id="messeage_err" class="red"></p>
                <input type="hidden" value="@Model.Target.ID" name="ID" />
                <input type="hidden" value="@Model.Target.Status" name="Status" />
                <button type="submit" class="btn btn-info">@Locate.T("Xong")</button>
            </div>
        </div>
    </div>
</form>