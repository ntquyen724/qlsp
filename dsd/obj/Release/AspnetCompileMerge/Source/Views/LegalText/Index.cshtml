@model LegalTextModel

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="@Locate.Url("/home.html")"><i class="fa fa-home"></i>@Locate.T("Tổng quan")</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption"><i class="fa fa-list" aria-hidden="true"></i>@ViewBag.Title</span>
                    <div class="widget-buttons">
                        <a data-toggle="maximize" href="#"><i class="fa fa-expand"></i></a>
                    </div>
                </div>
                <div class="widget-body no-padding widget_form_table">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter">
                            <form class="quickSearch" data-target="#divLegalText" action="@Locate.Url("/legal-text.html")" method="post" enctype="multipart/form-data">
                                <div class="col-md-2 padding-left-10 padding-right-0">
                                    <label>
                                        @Html.CusTextBox("CrtCode", "Code", @Model.SearchParam.Code, Locate.T("Số hiệu văn bản"), Locate.T("Số hiệu văn bản"), false)
                                    </label>
                                </div>
                                <div class="col-md-3 padding-left-10 padding-right-0">
                                    <label>
                                        @Html.CusTextBox("CrtName", "Name", @Model.SearchParam.Name, Locate.T("Tên văn bản"), Locate.T("Tên văn bản"), false)
                                    </label>
                                </div>
                                <div class="col-md-3 data_btn">
                                    <button class="btn btn-info" type="submit"><i class="glyphicon glyphicon-search"></i><span class="hidden-search">@Locate.T("Tìm kiếm")</span> </button>
                                    <a title="@Locate.T("Hủy tìm kiếm")" class="btn btn-info " href="@Locate.Url("/legal-text.html")"><i class="fa fa-times" aria-hidden="true"></i><span class="hidden-search"> @Locate.T("Hủy")</span></a>
                                </div>
                            </form>
                        </div>
                        <div class="DTTT btn-group ">
                            @if (true)
                            {
                                <a title="@Locate.T("Xóa")" data-href="@Locate.Url("/legal-text/is-deletes.html")"
                                   class="btn btn-danger hidden actMultiTicks quickDeletes" tabindex="0" aria-controls="searchable">
                                    <i class="fa fa-trash no-margin" aria-hidden="true"></i>  @Locate.T("Xóa")
                                </a>
                            }
                            @if (true)
                            {
                                <a title="@Locate.T("Tạo mới")" href="@Locate.Url("/legal-text/create.html")" data-target="#FrmCrLegalText" data-width="800"
                                   class="btn btn-info quickUpdate" tabindex="0" aria-controls="searchable">
                                    <i class="fa fa-plus no-margin" aria-hidden="true"></i>@Locate.T("Tạo mới")
                                </a>
                            }
                        </div>
                        <div id="divLegalText" class="divContainer">
                            @Html.Partial("LegalTexts", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
