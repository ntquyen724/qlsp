@model ContentTargetModel
<form id="FrmCrContentTarget" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      title="@ViewBag.Title" action="@Model.Url" class="form-horizontal  bv-form validateForm quickSubmit successOnRefresh" method="post" novalidate="novalidate">
    <div class="container-fluid">
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Tên nội dung")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtName", "Name", @Model.ContentTarget.Name, Locate.T("Tên nội dung"), Locate.T("Tên nội dung"), true, null, 250)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Loại nội dung")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.DropDownList("IDContentTargetType", Model.ContentTargetTypes.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.ContentTarget.IDContentTargetType) }).ToList(), new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Cấp cha")</label>
            <div class="col-lg-8">
                @Html.DropDownList("Parent", Model.ContentTargets.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.ContentTarget.Parent) }).ToList(), Locate.T("--- Chọn nội dung cha ---"), new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <p id="messeage_err" class="red"></p>
                <input type="hidden" value="@Model.ContentTarget.ID" name="ID" />
                <button type="submit" class="btn btn-info">@Locate.T("Xong")</button>
            </div>
        </div>
    </div>
</form>