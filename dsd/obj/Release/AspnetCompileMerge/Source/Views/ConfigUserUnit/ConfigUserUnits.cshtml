@model ConfigUserUnitModel
<table id="TblTeams" class="table table-bordered table-hover table-striped dataTable" role="grid" aria-describedby="searchable_info">
    <thead>
        <tr role="row">
            <th class="wpx50 center" tabindex="0">@Locate.T("STT")</th>
            <th class="wpx50 center" tabindex="0">
                <label>
                    <input class="group-checkable" type="checkbox" />
                    <span class="text"></span>
                </label>
            </th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Tài khoản")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Tên")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Đơn vị")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Thao tác")</th>
        </tr>
    </thead>
    <tbody>
        @if (Utils.IsNotEmpty(Model.ConfigUserUnits))
        {
            var stt = ViewBag.Pagination.RowStart;
            foreach (var item in Model.ConfigUserUnits)
            {
                stt++;
                var alias = Utils.StringAlias("người dùng- đơn vị", item.ID);
                var viewLink = Locate.Url("/config-user-unit/{0}.html", alias);
                var updateLink = Locate.Url("/config-user-unit/update/{0}.html", alias);
                var insertLink = Locate.Url("/config-user-unit/create/{0}.html", alias);
                var deleteLink = Locate.Url("/config-user-unit/is-delete/{0}.html", alias);
                var unit = Model.Units.FirstOrDefault(t => t.ID == item.IDUnit) ?? new Unit();
                var user = Model.Users.FirstOrDefault(t => t.ID == item.IDUser) ?? new User();
                <tr role="row">
                    <td class="sorting_1 center ">@stt</td>
                    <td class="sorting_1 center">
                        <label>
                            <input data-id="@item.ID" class="checkboxes" type="checkbox" />
                            <span class="text"></span>
                        </label>
                    </td>
                    <td>@user.Username</td>
                    <td>@user.Name</td>
                    <td>
                    <div class="user-info">
                        <span class="ui">
                            
                            <span class="clearfix" title="@Locate.T("Đơn vị cấp")"><i class="fa fa-university" aria-hidden="true"></i>@Locate.T("Đơn vị cấp") : @Model.GrantReports.GetValue(unit.GrantReport)</span>
                            <span class="clearfix" title="@Locate.T("Tên đơn vị")"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>@Locate.T("Tên đơn vị") : @unit.Name</span>
                        </span>
                    </div>
                </td>
                <td>
                    <div class="btns">
                        <div class="btn-group ">
                            <a href="javascript:;" data-toggle="dropdown" class="btn btn-sm btn-blue dropdown-toggle" aria-expanded="true">@Locate.T("Biên tập") <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu dropdown-blue dropdown-menu-right">
                                <li>
                                    <a class="edit quickUpdate" data-id="@item.ID" data-area="#FrmUpTarget" title="@Locate.T("Sửa")" href="@updateLink">
                                        @Locate.T("Sửa")
                                    </a>
                                </li>
                                <li>
                                    <a class="quickDelete" data-id="@item.ID" data-area=".ui-dialog:visible" title="@Locate.T("Xóa")" href="@deleteLink">
                                        <i class=""></i> @Locate.T("Xóa")
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
<div class="row DTTTFooter">
    @if (ViewBag.Pagination.RowCount == 0)
    {
        <div class="col-sm-12 text-center padt10">
            <strong>
                @Locate.T("Không có giá trị nào phù hợp, vui lòng thử lại")
            </strong>
        </div>
    }
    <div class="col-sm-6">
        <div class="dataTables_info" id="searchable_info" role="status" aria-live="polite"></div>
    </div>
    <div class="col-sm-6">@ViewBag.Pagination.SetTarget("#divArea").Render()</div>
</div>