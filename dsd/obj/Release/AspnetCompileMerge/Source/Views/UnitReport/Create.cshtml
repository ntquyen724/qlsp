@model UnitReportModel
<form id="FrmCrUnitReport" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      title="@ViewBag.Title" action="@Model.Url" class="form-horizontal  bv-form validateForm quickSubmit successOnRefresh" method="post" novalidate="novalidate">
    <div class="container-fluid">
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Mã ngành dọc")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtCode", "Code", @Model.UnitReport.Code, Locate.T("Mã ngành dọc"), Locate.T("Mã ngành dọc"), true, null)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Tên đơn vị ngành dọc")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtName", "Name", @Model.UnitReport.Name, Locate.T("Tên đơn vị ngành dọc"), Locate.T("Tên đơn vị ngành dọc"), true, null)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Tên viết tắt")</label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtAcronym", "Acronym", @Model.UnitReport.Acronym, Locate.T("Tên viết tắt"), Locate.T("Tên viết tăt"), false, null)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Số thứ tự")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBoxDigit("CrtWeight", "Weight", @Model.UnitReport.Weight, Locate.T("Số thứ tự"), Locate.T("Số thứ tự"), true, null)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Mô tả")</label>
            <div class="col-lg-8">
                @Html.CusTextArea("CrtDescribe", "Describe", @Model.UnitReport.Describe, Locate.T("Mô tả"),null,5)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Cấp báo cáo")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.DropDownList("GrantReport", Utils.GetDescribes<DocProUBDT.Customs.Enum.GrantReport>().Select(x => new SelectListItem() { Text = x.Value, Value = x.Key.ToString(), Selected = (x.Key == Model.UnitReport.GrantReport) }).ToList(), new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <p id="messeage_err" class="red"></p>
                <input type="hidden" value="@Model.UnitReport.ID" name="ID" />
                <button type="submit" class="btn btn-info">@Locate.T("Xong")</button>
            </div>
        </div>
    </div>
</form>