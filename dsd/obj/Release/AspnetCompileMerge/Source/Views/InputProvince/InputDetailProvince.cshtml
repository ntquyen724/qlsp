@model FormModel
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="@Locate.Url("/home.html")"><i class="fa fa-home"></i>@Locate.T("Tổng quan")</a>
        </li>
        <li>
            <a href="@Locate.Url("/input-province.html")"><i class="fa fa-folder"></i> @Locate.T("Phiếu nhập")</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
@{
    int idProvide = Request.Params["IDProvice"] != null ? int.Parse(Request.Params["IDProvice"]) : 0;
}
<div class="page-body">
    <div class="row">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption">@ViewBag.Title</span>
                </div>

                <div class="widget-body no-padding widget_form_table">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter">
                            <div class="row">
                                <div class="col-md-3 padding-left-10 padding-right-0">
                                    <label>
                                          @Html.DropDownList("IDProvice", Model.Provinces.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == idProvide) }).ToList(), new { @class = "form-control input-sm select_change", @data_url = Locate.Url("/input-province/DistricPicker.html"), @data_target = "#input-distric" })
                                    </label>
                                </div>
                                <input type="hidden" value="@Model.IDInputGrantReport" id="IDInputGrantReport" />
                                <input type="hidden" value="@Model.IDInputUnitReport" id="IDInputUnitReport" />
                                <input type="hidden" value="@Model.IDInputArea" id="IDInputArea" />
                                <input type="hidden" value="@Model.IDCoupon" id="IDCoupon" />
                                <input type="hidden" value="@Model.IDForm" id="IDForm" />
                            </div>
                        </div>

                        <div id="input-data">
                            @Html.Partial("InputDataPicker", Model)
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
