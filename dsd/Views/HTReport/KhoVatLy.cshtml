@model KhoVatLyModelView

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="@Locate.Url("/home.html")"><i class="fa fa-home"></i>@Locate.T("Tổng quan")</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption"><i class="fa fa-list" aria-hidden="true"></i>@ViewBag.Title</span>
                    <div class="widget-buttons">
                        <a data-toggle="maximize" href="#"><i class="fa fa-expand"></i></a>
                    </div>
                </div>
                <div class="widget-body no-padding widget_form_table">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter">
                            <form class="quickSearch" data-target="#divArea" action="/htreport/khovatly.html" method="post" enctype="multipart/form-data">
                                <div class="col-md-3 padding-left-10 padding-right-0">
                                    <label>
                                        <input type="text" value="@Model.SearchParam.Term" name="Term" class="form-control input-sm padding-left-5" title="@Locate.T("Từ khóa tìm kiếm")" placeholder="@Locate.T("Tìm kiếm theo tên")" aria-controls="searchable">
                                    </label>
                                </div>
                                <div class="col-md-3 data_btn">
                                    <button class="btn btn-info" type="submit"><i class="glyphicon glyphicon-search"></i><span class="hidden-search">@Locate.T("Tìm kiếm")</span> </button>
                                    <a title="@Locate.T("Hủy tìm kiếm")" class="btn btn-info " href="@Locate.Url("/htreport/khovatly.html")"><i class="fa fa-times" aria-hidden="true"></i><span class="hidden-search"> @Locate.T("Hủy")</span></a>
                                </div>
                            </form>
                        </div>
                        <div class="DTTT btn-group ">
                            <a title="@Locate.T("Tạo mới chỉ tiêu")" id="btnAdd" data-target="#prisoner_bodyTable"
                               class="btn btn-info" tabindex="0" aria-controls="searchable">
                                <i class="fa fa-plus no-margin" aria-hidden="true"></i>@Locate.T("Tạo mới")
                            </a>
                            <a href="javascript:;" title="@Locate.T("Export dữ liệu")" data-toggle="dropdown" class="btn btn-primary dropdown-toggle" aria-expanded="false">
                                <i class="glyphicon glyphicon-export"></i>&nbsp; @Locate.T("Export")  &nbsp;&nbsp;<i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="@CUtility.GenLinkExport(Locate.Url("/htreport/export-khovatly.html?"), Model.SearchParam)" class="btn btn-sm ">
                                        <i class="fa fa-file-excel-o"></i>@Locate.T("Excel")
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div id="divArea" class="divContainer">
                            @Html.Partial("KhoVatLyTable", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
