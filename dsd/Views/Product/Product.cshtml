@model ProductModel
<table id="TblTeams" class="table table-bordered table-hover table-striped dataTable" role="grid" aria-describedby="searchable_info">
    <thead>
        <tr role="row">
            <th class="wpx50 center" tabindex="0">@Locate.T("STT")</th>
            <th class="wpx50 center" tabindex="0">
                <label>
                    <input class="group-checkable" type="checkbox" />
                    <span class="text"></span>
                </label>
            </th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Mã Sản phẩm")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Tên Sản phẩm")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Tên Version")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Loại Sản phẩm")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Thời gian phát triển")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Thời gian phát hành")</th>
            <th class="wpx120 center" tabindex="0" aria-controls="searchable">@Locate.T("Thao tác")</th>
        </tr>
    </thead>
    <tbody>
        @if (Utils.IsNotEmpty(Model.Products))
        {
            var stt = ViewBag.Pagination.RowStart;
            foreach (var item in Model.Products)
            {
                stt++;
                var alias = Utils.StringAlias(item.Name, item.ID);
                var viewLink = Locate.Url("/product/{0}.html", alias);
                var updateLink = Locate.Url("/product/update/{0}.html", alias);
                var insertLink = Locate.Url("/product/create/{0}.html", alias);
                var deleteLink = Locate.Url("/product/is-delete/{0}.html", alias);
                var version = Model.versions.FirstOrDefault(t => t.ID == item.IDVersionCurrent);
                var producttypeName = Model.categories.FirstOrDefault(c => c.ID == item.ProductType);
        <tr role="row">
            <td class="sorting_1 center ">@stt</td>
            <td class="sorting_1 center">
                <label>
                    <input data-id="@item.ID" class="checkboxes" type="checkbox" />
                    <span class="text"></span>
                </label>
            </td>
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@version.Name</td>
            <td>@producttypeName.Name</td>
            <td>@version.StartDate</td>
            <td>@version.Released</td>
        
            <td>
                <div class="btns">
                    <div class="btn-group ">
                        <a href="javascript:;" data-toggle="dropdown" class="btn btn-sm btn-blue dropdown-toggle" aria-expanded="true">@Locate.T("Thao tác")<i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu dropdown-blue dropdown-menu-right">
                            <li>
                                <a class="edit quickUpdate" data-id="@item.ID" data-area="#FrmUpTarget" title="@Locate.T("Sửa")" href="@updateLink">
                                    @Locate.T("Sửa")
                                </a>
                            </li>
                            <li>
                                <a class="quickDelete" data-id="@item.ID" data-area=".ui-dialog:visible" title="@Locate.T("Xóa")" href="@deleteLink">
                                    <i class=""></i> @Locate.T("Xóa")
                                </a>
                            </li>
                            <li>
                                <a class="quickDelete" data-id="@item.ID" data-area=".ui-dialog:visible" title="@Locate.T("Tạo mới version")" href="@deleteLink">
                                    <i class=""></i> @Locate.T("Tạo mới version")
                                </a>
                            </li>                     
                        </ul>
                    </div>
                </div>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<div class="row DTTTFooter">
    @if (ViewBag.Pagination.RowCount == 0)
    {
        <div class="col-sm-12 text-center padt10">
            <strong>
                @Locate.T("Không có giá trị nào phù hợp, vui lòng thử lại")
            </strong>
        </div>
    }
    <div class="col-sm-6">
        <div class="dataTables_info" id="searchable_info" role="status" aria-live="polite"></div>
    </div>
    <div class="col-sm-6">@ViewBag.Pagination.SetTarget("#divArea").Render()</div>
</div>