@model CreateProductModel
<form id="FrmCrArea" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      title="@ViewBag.Title" action="@Model.Url" class="form-horizontal bv-form validateForm quickSubmit successOnRefresh" method="post" novalidate="novalidate">
    <div class="container-fluid">
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Tên Sản phẩm")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CrtName", "Name", @Model.Product.Name, Locate.T("Tên sản phẩm"), Locate.T("Tên sản phẩm"), true, null)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Loại sản phẩm")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.DropDownList("Parent", Model.categories.Select(x => new SelectListItem() { Text = x.Name, Value = x.ID.ToString(), Selected = (x.ID == Model.Product.ProductType) }).ToList(), new { @class = "form-control input-sm autoSelect2" })
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("Mô tả sản phẩm")<span class="red">*</span></label>
            <div class="col-lg-8">
                @Html.CusTextBox("CtrDes", "Des", @Model.Product.Name, Locate.T("Mô tả sản phẩm"), Locate.T("Mô tả sản phẩm"), true, null)
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@Locate.T("upload Logo sản phẩm")<span class="red">*</span></label>
            <div class="col-lg-8">
                @*<div class="imageUpdate">
                    <img src="@GlobalConfig.StgSrcPath(Model.Employee.Avatar)" alt="@Model.Employee.Name" class="old_imageUpdate" />
                    <span id="divfile" class="new_imageUpdate">

                    </span>
                </div>
                <br />
                <button type="button" class="btn btn-info attachFile" data-rel="#AttachFiles" data-target="#divfile"
                        data-file-name="ImageName" data-file-path="ImagePath">
                    <i class="glyphicon glyphicon-upload "></i> @Locate.T("Tải file")
                </button>*@
                <button type="button" class="btn btn-info attachFile" data-isonly="1" data-rel="#AttachFiles" data-target="#divfile"
                        data-file-name="ImageName" data-file-path="ImagePath">
                    <i class="glyphicon glyphicon-upload "></i> @Locate.T("Tải file")
                </button>
                <span id="divfile">
                    @if (!string.IsNullOrEmpty(Model.Product.Logo))
                    {
                        <span class="fileitem member">
                            <img class="img-thumbnail" src="@GlobalConfig.StgSrcPath(Model.Product.Logo)" title=@Model.Product.Logo><br>
                            <input name="Avatar" class="filePaths" type="hidden" value=@Model.Product.Logo>
                            <button type="button" class="btn btn-xs btn-link close delMember">x</button>
                        </span>
                    }
                </span>
            </div>
        </div>
        <div id="divArea" class="divContainer">
            @Html.Partial("CreateVersion", Model)
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-4">
                <p id="messeage_err" class="red"></p>
                <input type="hidden" value="@Model.Product.ID" name="ID" />
                <button type="submit" class="btn btn-info">@Locate.T("Xong")</button>
            </div>
        </div>
    </div>
</form>